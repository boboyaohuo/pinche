/**mine.wxss**/

.contain {
  background: #ffffff;
}

.getUserInfo-button {
  position: fixed;
  top: 50%;
  left: 50%;
  width: 400rpx;
  height: 100rpx;
  margin-left: -200rpx;
  margin-top: -50rpx;
  background: #ffab65;
  color: #ffffff;
}

.getUserInfo-button-hover {
  box-shadow: 0rpx 0rpx 60rpx #ffab65;
}

.getUserInfo-button::after {
  border: none;
}

.user {
  position: relative;
  overflow: hidden;
  border-bottom: 1px solid #e6e6e6;
}

.userBackground {
  position: absolute;
  z-index: 0;
  width: 100%;
  height: 100%;
  background: no-repeat center center/cover;
  filter: blur(6rpx) brightness(.8);
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 99;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-top: 80rpx;
  border-radius: 50%;
  border: 2px solid #ffffff;
}

.userinfo-nickname {
  color: #ffffff;
  margin-top: 20rpx;
  margin-bottom: 80rpx;
}

.list {
  padding: 0 36rpx;
}

.list-item {
  box-sizing: border-box;
  width: 100%;
  height: 120rpx;
  display: flex;
  font-size: 30rpx;
  color: #373431;
  line-height: 120rpx;
  text-indent: 52rpx;
}

.list-item:nth-child(1) {
  background: url(http://btcf.oss-cn-hangzhou.aliyuncs.com/img/H5/icon/right-icon.png) no-repeat right center/40rpx,
  url(http://btcf.oss-cn-hangzhou.aliyuncs.com/img/H5/icon/release-icon1.png) no-repeat 3rpx center/44rpx;
  border-bottom: 1rpx solid #e6e6e6;
}

.list-item:nth-child(2) {
   background: url(http://btcf.oss-cn-hangzhou.aliyuncs.com/img/H5/icon/right-icon.png) no-repeat right center/40rpx,
  url(http://btcf.oss-cn-hangzhou.aliyuncs.com/img/H5/icon/collect-icon.png) no-repeat 5rpx center/40rpx;
}